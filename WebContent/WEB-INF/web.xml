<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
	<display-name>jersey2-example</display-name>
	<servlet>
		<servlet-name>aetherstore-gateway-servlet</servlet-name>
		<servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
	
		<init-param>
			<param-name>javax.ws.rs.Application</param-name>
			<param-value>com.aetherworks.example.jersey2.ExampleApplication</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>jersey2-example</servlet-name>
		<url-pattern>/v1/*</url-pattern>
	</servlet-mapping> 
</web-app>